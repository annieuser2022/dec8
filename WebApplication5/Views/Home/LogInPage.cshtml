@model WebApplication5.Models.Login
@{
    ViewData["Title"] = "Login Page";
   
        <form asp-action="CheckCredentials" method="post">
            EmailID:
            @Html.TextBoxFor(l=>l.EmailId, new {@class="form-control"})
            
            Password:
            @Html.TextBoxFor(l=>l.Password, new {@class="form-control"})
            <input type="submit" value="Submit"/>
        </form>
    <p style ="color:red">
        @ViewBag.prompt
    </p>

}
